@model WebApp.Models.CreateLoanViewModel

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<h4>CreateLoanViewModel</h4>
<hr />

<h4 id="message" style="color: @(Model != null && !string.IsNullOrEmpty(@Model.Loan.ErrorMessage) ? "red;" : "green;")">
    @(Model != null && string.IsNullOrEmpty(@Model.Loan.ErrorMessage) ? "Lånet blev oprettet" : @Model?.Loan.ErrorMessage)
</h4>



<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateLoan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" name="Card_ID">
                <label asp-for="Card_ID" class="control-label"></label>
                <input asp-for="Card_ID" class="form-control" />
                <span asp-validation-for="Card_ID" class="text-danger"></span>
            </div>
            <div class="form-group" name="Barcode1">
                <label asp-for="Barcode1" class="control-label"></label>
                <input asp-for="Barcode1" class="form-control" />
                <span asp-validation-for="Barcode1" class="text-danger"></span>
            </div>
            <div class="form-group" name="Barcode2">
                <label asp-for="Barcode2" class="control-label"></label>
                <input asp-for="Barcode2" class="form-control" />
                <span asp-validation-for="Barcode2" class="text-danger"></span>
            </div>
            <div class="form-group" name="Barcode3">
                <label asp-for="Barcode3" class="control-label"></label>
                <input asp-for="Barcode3" class="form-control" />
                <span asp-validation-for="Barcode3" class="text-danger"></span>
            </div>
            <div class="form-group" name="Barcode4">
                <label asp-for="Barcode4" class="control-label"></label>
                <input asp-for="Barcode4" class="form-control" />
                <span asp-validation-for="Barcode4" class="text-danger"></span>
            </div>
            <div class="form-group" name="Barcode5">
                <label asp-for="Barcode5" class="control-label"></label>
                <input asp-for="Barcode5" class="form-control" />
                <span asp-validation-for="Barcode5" class="text-danger"></span>
            </div>
            <div class="form-group" name="createLoan">
                <input type="submit" name="createLoan" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    @if (Model?.Loan != null && string.IsNullOrEmpty(Model.Loan.ErrorMessage))
    {
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayName("Lånerkort ID:")
                </dt>
                <dd class="col-sm-9" id="createCardId">
                    @Html.DisplayFor(model => model.Loan.Card.ID)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayName("Startdato:")
                </dt>
                <dd class="col-sm-9" id="createStartDate">
                    @Html.DisplayFor(model => model.Loan.StartDate)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayName("Afleveringsfrist:")
                </dt>
                <dd class="col-sm-9" id="createDueDate">
                    @Html.DisplayFor(model => model.Loan.DueDate)
                </dd>
            </dl>
        </div>
    }
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

